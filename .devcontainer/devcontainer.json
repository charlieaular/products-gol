{
	"name": "products-go",
	"image": "mcr.microsoft.com/devcontainers/go:0-1.19-bullseye",
	"runArgs": [ "--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined" ],
	"customizations": {
		"vscode": {
			"settings": { 
				"go.toolsManagement.checkForUpdates": "local",
				"go.useLanguageServer": true
			},
			"extensions": [
				"golang.Go",
				"humao.rest-client"
			]
		}
	},
	"remoteUser": "vscode"
}
